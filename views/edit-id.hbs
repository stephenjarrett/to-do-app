<h1>Edit this task:</h1>

<div class="container">
    <form action="/{{id}}/edit" method="POST">
        <input type="text" name="title" value="{{title}}" placeholder="Edit task title">
        <br>
        <label for="isdone">Task Complete:
        <input type="checkbox" name="isdone" id="isdone" value="true"
        {{#if isdone}}
            checked
        {{/if }}>
        </label>
        <br>
        <input class="btn" type="submit" value="Submit">
        <input class="btn" type="reset" value="Reset">
        <br>
        <a href="/"><input class="btn" type="button" value="Home"></a>
    </form>
</div>